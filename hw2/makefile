all: clear clean compile run
clear: 
	@clear

compile:
	@echo "-------------------------------------------"
	@echo "Compiling..."
	@g++ driver1.cpp  -o driver1
	@g++ driver2.cpp  -o driver2

run:
	@echo "-------------------------------------------"
	@echo "Running the tests...."
	@echo "================================================================================="
	./driver1
	@echo "================================================================================="
	@echo "Completed tests...."
	@echo "-------------------------------------------"
	@echo "Running the tests...."
	@echo "================================================================================="
	./driver2
	@echo "================================================================================="
	@echo "Completed tests...."
	

clean:
	@echo "-------------------------------------------"
	@echo "Removing compiled files..."
	@rm -f test